<div class="nav">
    <%= signed_in %>
    <h2 class="center-nav text-white">Add a new group</h2>
</div>

<div class="col-7 mx-auto py-5">

  <%= render 'layouts/messages'%>


  <%= form_with(model: @group, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder:'Name of group', class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Add Group', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

