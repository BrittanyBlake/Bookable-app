<h2>Add a new book</h2>
<%= form_with(model: @book, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder:'Title of Book', class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, placeholder:'Name of Author', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :number_of_pages %>
    <%= f.text_field :number_of_pages, placeholder:'Number of pages', class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.submit 'Add Book', class: 'btn btn-success' %>
  </div>
<% end %>
